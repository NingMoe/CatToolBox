<view>
  <view class="font_info">{{year}}年{{month}}月{{day}}日</view>
  <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;margin-top:50rpx;" value="{{value}}" bindchange="bindChange">
    <picker-view-column>
      <view wx:for="{{years}}" style="line-height: 50px" wx:key='key'>{{item}}年</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{months}}" style="line-height: 50px" wx:key='key'>{{item}}月</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{days}}" style="line-height: 50px" wx:key='key'>{{item}}日</view>
    </picker-view-column>
  </picker-view>
  <view>
    <button class='mode_btn' bindtap='submitClick' type='warn'>查询</button>
  </view>
</view>